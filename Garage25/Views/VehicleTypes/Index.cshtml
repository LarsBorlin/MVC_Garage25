@model IEnumerable<Garage25.Models.VehicleType>

@{
    ViewBag.Title = "List of Vehicle Types";
}

<h2>List of Vehicle types accepted in Golden Garage</h2>

<p>

    <input type="submit" value="Add New Vehicle Type" class="btn btn-default" onclick="location.href='@Url.Action("Create","VehicleTypes")'" />

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkingSpace)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingSpace)
        </td>
        <td>
          

            <input type="submit" value="Update Vehicle Type" class="btn btn-default" onclick="location.href='@Url.Action("Edit","VehicleTypes" ,new { id = item.Id })'" />
            <input type="submit" value="Remove Vehicle" class="btn btn-default" onclick="location.href='@Url.Action("Delete","VehicleTypes" ,new { id = item.Id })'" />

        </td>
    </tr>
}

</table>
