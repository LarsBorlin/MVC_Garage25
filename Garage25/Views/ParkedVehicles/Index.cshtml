@model IEnumerable<Garage25.Models.ViewModels.SummaryParkedVehicles>

@{
    ViewBag.Title = "Summary of Parked Vehicles";
}

<h2>Summary of Parked Vehicles</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <input type="submit" value="Check in" class="btn btn-default" onclick="location.href='@Url.Action("Create","ParkedVehicles")'" />
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Days)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Minutes)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Days)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Minutes)
        </td>

        <td>

            <input type="submit" value="Edit" class="btn btn-default" onclick="location.href='@Url.Action("Edit","ParkedVehicles" ,new { id = item.Id })'" />
            <input type="submit" value="Details" class="btn btn-default" onclick="location.href='@Url.Action("Details","ParkedVehicles" ,new { id = item.Id })'" />
            <input type="submit" value="Check out" class="btn btn-default" onclick="location.href='@Url.Action("CheckOut","ParkedVehicles" ,new { id = item.Id })'" />
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
